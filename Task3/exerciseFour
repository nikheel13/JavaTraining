package taskThree;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        //Exercise 4
        //Sum of n numbers (natural)
        System.out.println("Please enter a number: ");
        Scanner st = new Scanner(System.in);
        int num = st.nextInt();
        int sum = 0;

        for(int i = 1; i <= num; ++i)
        {
            // sum = sum + i;
            sum += i;
        }

        System.out.println("Sum = " + sum);

    }

}
